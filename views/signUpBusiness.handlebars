{{!-- javascript --}}

<script>
    $(document).ready(function () {
        $("#business-SubmitBtn").on("click", function () {
            let newCompany = {
                company_name: $("#business_name").val().trim(),
                email: $("#business_email").val().trim(),
                password: $("#business_password").val().trim(),
                bio: $("#business_bio").val().trim(),
                max_price: $("#business_max_price").val().trim(),
            }

            $.post("/api/company", newCompany, {
            })
        })

    });

</script>